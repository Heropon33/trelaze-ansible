receivers:
  # Receiver pour Docker (existant)
  filelog/docker:
    include: [ /var/lib/docker/containers/*/*.log ]
    operators:
      - type: json_parser
        timestamp:
          parse_from: attributes.time
          layout: '%Y-%m-%dT%H:%M:%S.%LZ'

  # NOUVEAU : Receiver pour les logs syst√®mes
  filelog/system:
    include: 
      - /var/log/syslog
      - /var/log/auth.log
    start_at: end
    operators:
      - type: add
        field: attributes.log_type
        value: system

processors:
  batch:

exporters:
  otlphttp:
    endpoint: "http://{{ hostvars['supervision01'].ansible_host }}:3100/otlp"
    tls:
      insecure: true

service:
  pipelines:
    logs:
      # On ajoute le nouveau receiver ici
      receivers: [filelog/docker, filelog/system]
      processors: [batch]
      exporters: [otlphttp]