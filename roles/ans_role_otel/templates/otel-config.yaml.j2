receivers:
  filelog:
    include: [ /var/lib/docker/containers/*/*.log ]
    operators:
      - type: json_parser
        timestamp:
          parse_from: attributes.time
          layout: '%Y-%m-%dT%H:%M:%S.%LZ'

processors:
  batch:

exporters:
  otlphttp:
    endpoint: "http://{{ hostvars['supervision01'].ansible_host }}:3100/otlp"
    tls:
      insecure: true

service:
  pipelines:
    logs:
      receivers: [filelog]
      processors: [batch]
      exporters: [otlphttp]