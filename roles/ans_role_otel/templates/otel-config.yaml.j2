receivers:
  filelog:
    include: [ /var/lib/docker/containers/*/*.log ]
    operators:
      - type: json_parser
        timestamp:
          parse_from: attributes.time
          layout: '%Y-%m-%dT%H:%M:%S.%LZ'

processors:
  batch:

exporters:
  # Utilisation du protocole HTTP standard (plus robuste ici)
  otlphttp:
    # On pointe vers le port 3100 avec le chemin /otlp
    endpoint: "http://{{ hostvars['supervision01'].ansible_host }}:3100/otlp"
    tls:
      insecure: true

service:
  pipelines:
    logs:
      receivers: [filelog]
      processors: [batch]
      # Attention : on appelle bien l'exportateur 'otlphttp' d√©fini au-dessus
      exporters: [otlphttp]